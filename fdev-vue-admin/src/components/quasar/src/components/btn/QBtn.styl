
.q-btn
  display: inline-flex
  flex-direction: column
  align-items: stretch
  position: relative
  outline: 0
  border: 0
  vertical-align: middle
  padding: 0
  font-size: $button-font-size
  line-height: $button-line-height
  text-decoration: none
  color: inherit
  background: transparent
  font-weight: $button-font-weight
  text-transform: uppercase
  text-align: center
  width: auto
  height: auto
  opacity: 1 !important
  .q-icon, .q-spinner
    font-size: $button-line-height
  
  .on-left
    margin-right: 4px

  &__wrapper
    padding: $button-padding
    min-height: 2.572em
    border-radius: inherit
    width: 100%
    height: 100%

    &:before
      content: ''
      display: block
      position: absolute
      left: 0
      right: 0
      top: 0
      bottom: 0
      border-radius: inherit
      //box-shadow: $button-shadow
      box-shadow: none

  &--actionable
    cursor: pointer

    &.q-btn--standard
      .q-btn__wrapper:before
        // This places the button active raise shadow behind adjacent elements
        // Active raise shadow will still be visible under adjacent transparent elements, this is ok and coherent with a desired transparency effect.
        // Visible active raise shadow can be removed by specifying a background color to the button
        // Visible active raise shadow can be removed by specifying a flat or outline button type
        //transition: box-shadow $button-transition
        transition: box-shadow none
      &:active,
      &.q-btn--active
        .q-btn__wrapper:before
          //box-shadow: $button-shadow-active
          box-shadow: none


  &--no-uppercase
    text-transform: none

  &--rectangle
    //border-radius: $button-border-radius
    border-radius: $generic-border-radius 
  
  &--hoverClass
    &:hover
      background rgba(6, 99, 199, 0.1) !important

  &--normal-hoverClass
    &:hover
      background: $blue-1 !important
      color: $primary !important
      .q-btn__wrapper:before
        border: 1px solid $primary !important

  &--standard-hoverClass
    &:hover
      background rgb(6, 99, 190) !important
      opacity 0.8 !important

  &.q-focusable:focus .q-focus-helper
    opacity 1 !important
    background rgba(6, 99, 199, 0.2) !important
    &:before, &:after
      background none !important
      opacity 1 !important

  &--standard
    font-weight: 500
    min-width: 140px
    height 36px
    &.q-focusable:focus .q-focus-helper
      opacity 1 !important
      background $primary !important
      &:after
        opacity 0.2 !important
        background $black-0 !important

  &--flat
    font-size: 14px
    .q-btn__wrapper
      padding 0
      min-height none
    &.q-btn--hoverClass
      &:hover
        color rgba(6, 99, 199, 0.8) !important
        background none !important
    &.q-focusable:focus
      color rgba(6, 99, 199, 1) !important
      .q-focus-helper
        background none !important
    .q-focus-helper
      background none !important
      transition none !important
      opacity 1 !important
      &:before, &:after
        background none !important
        opacity 1 !important
        transition none !important
  
  &--normal
    height: 36px
    .q-btn__wrapper:before
      border: 1px solid $grey-2 !important
    &.q-btn--disable
      .q-btn__wrapper:before
        border: 1px solid $grey-2
    
  &--dropdown
    background: transparent !important
    .q-btn__wrapper:before
      border: 1px solid $blue-grey-1
    &-hover
      &:hover
        color: $primary !important

  &--outline
    background: transparent !important
    min-width: 140px
    height: 36px

    .q-btn__wrapper:before
      border: 1px solid currentColor
    &--disable
      .q-btn__wrapper:before
        border: 1px solid $grey-2

  &--menu
    background: none
    font-weight: 500
    height: 40px
    padding: 0 10px 0 8px
    border-radius: 4px
    .q-btn__wrapper
      padding 0px
    &--label
      max-width 100px

  &--dash
    background: transparent !important
    min-width: 74px
    fontsize: 14px
    height 36px
    .q-btn__content
      height 36px
    .q-btn__wrapper:before
      border: 1px dashed currentColor
    .q-btn--disable
      .q-btn__wrapper:before
        border: 1px solid $grey-2

  &--roundash
    background: transparent !important
    min-width: 106px
    fontsize: 14px
    border-radius: $button-rounded-border-radius
    height 32px
    .q-btn__wrapper:before
      border: 1px dashed currentColor
    .q-btn__content
      height 32px
    &.q-btn--disable
      .q-btn__wrapper:before
        border: 1px solid $grey-2


  &--dialog-width
    min-width 74px !important


  &--push
    border-radius: $button-push-border-radius

    .q-btn__wrapper:before
      border-bottom: 3px solid rgba(0,0,0,.15)

    &.q-btn--actionable
      transition: transform $button-transition

      .q-btn__wrapper:before
        transition: top $button-transition, bottom $button-transition, border-bottom-width $button-transition

      &:active,
      &.q-btn--active
        transform: translateY(2px)

        .q-btn__wrapper:before
          border-bottom-width: 0

  &--rounded
    border-radius: $button-rounded-border-radius

  &--round
    border-radius: 50%

    .q-btn__wrapper
      padding: 0
      min-width: 3em
      min-height: 3em

  &--flat, &--outline, &--unelevated
    .q-btn__wrapper:before
      box-shadow: none

  &--dense
    .q-btn__wrapper
      padding: $button-dense-padding
      min-height: 2em
    &.q-btn--round
      .q-btn__wrapper
        padding: 0
        min-height: 2.4em
        min-width: 2.4em
    .on-left
      margin-right: 6px
    .on-right
      margin-left: 6px

  &--fab, &--fab-mini
    .q-icon
      font-size: 24px
  &--fab
    .q-icon
      margin: auto
    .q-btn__wrapper
      padding: 16px
      min-height: 56px
      min-width: 56px
  &--fab-mini .q-btn__wrapper
    padding: 8px
    min-height: 40px
    min-width: 40px

  // workaround for alignment/sizing change when showing loader
  &__content
    transition: opacity .3s
    z-index: 0

    &--hidden
      opacity: 0
      pointer-events: none

  &__progress
    border-radius: inherit
    z-index: 0

    &-indicator
      z-index: -1
      transform: translateX(-100%)
      background: rgba(255,255,255,.25)
    &--dark
      .q-btn__progress-indicator
        background: rgba(0,0,0,.2)

  &--flat, &--outline
    .q-btn__progress-indicator
      opacity: 0.2
      background: currentColor

  &--plain
    background: none !important
    line-height 22px
    .q-btn__wrapper
      min-height 0
      min-width 0 !important
      padding 0 !important
    &.q-btn--hoverClass
      &:hover
        color rgba(6, 99, 199, 0.8) !important
        background none !important
    &.q-focusable:focus
      color rgba(6, 99, 199, 1) !important
      .q-focus-helper
        background none !important
    .q-focus-helper
      background none !important
      transition none !important
      opacity 1 !important
      &:before, &:after
        background none !important
        opacity 1 !important
        transition none !important
