.q-menu
  position: fixed !important
  display: inline-block
  max-width: $menu-max-width

  box-shadow: $menu-box-shadow
  background: $menu-background
  //border-radius: $generic-border-radius
  border-radius: 6px
  overflow-y: auto
  overflow-x: hidden
  outline: 0
  //border  1px solid $blue-grey-1
  border none
  max-height: 300px
  z-index: $z-menu

  &--square
    border-radius: 0

  &--header
    box-shadow: 0 2px 10px 0 rgba(30,84,213,0.30)
    top: 68px !important

.q-select--menu
  padding-top 5px
  padding-bottom  5px
  &::-webkit-scrollbar
    display hidden 
  &.q-position-engine
    border  1px solid $grey-1
    margin-top  4px !important
  &.scroll-thin-y-auto
    overflow-y  auto
    overflow-x  hidden
  &.scroll-thin-y-auto::-webkit-scrollbar
    width 12px
    height 12px
    border-left 1px solid $grey-1
  &.scroll-thin-y-auto::-webkit-scrollbar-thumb
    background-color  rgba(51,51,51,0.25)
    border-top 2px solid transparent
    border-right 2px solid transparent
    border-bottom 2px solid transparent
    border-left 3px solid transparent
    background-clip content-box
    border-radius 20px
  .q-item__label
    overflow  hidden
    display -webkit-box
    -webkit-box-orient  vertical
    -webkit-line-clamp  2
    word-break  break-all
