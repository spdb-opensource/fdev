//$radio-transition = .22s cubic-bezier(0,0,.2,1) 0ms
$radio-transition = .22s ease-in

.q-radio
  vertical-align: middle
  &__label
    font-weight 500

  &__bg
    top: 17%
    left: 0%
    width: 70%
    height: 70%

    color: $primary

    path
      fill: currentColor

  &__native
    width: 1px
    height: 1px

  &__check
    transform-origin: 50% 50%
    transform: scale3d(0, 0, 1)
    transition: transform $radio-transition

  &__inner
    font-size: 26px
    width: 1em
    min-width: 1em
    height: 1em
    outline: 0
    border-radius: 50%
    color: rgba(0,0,0,.54)

    &--truthy
      color: $primary
      color: var(--q-color-primary)
      .q-radio__check
        transform: scale3d(1, 1, 1)

    &--falsy
      .non-selectable
        color $grey-2
        &:hover
          color $primary

  &.disabled
    //opacity: .75 !important
    opacity: 1 !important
    .q-radio__bg
      color: $grey-2
      background $grey-0
      border-radius 50%
    .q-radio__label
      color: $grey-3
    

  &--dark
    .q-radio__inner
      color: rgba(255,255,255,.7)
      &:before
        opacity: .32 !important
      &--truthy
        color: $primary
        color: var(--q-color-primary)

